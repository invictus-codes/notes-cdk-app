{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "@antfu/eslint-config-ts"
  ],
  "rules": {
    "space-before-function-paren": 0,
    "@typescript-eslint/comma-dangle": 0,
    "no-new": "warn",
    "no-console": "warn",
    "no-debugger": "error",
    "no-tabs": [
      "error",
      {
        "allowIndentationTabs": false
      }
    ],
    "require-await": "off",
    "no-unused-vars": "warn",
    "no-dupe-keys": "warn",
    "curly": [
      "error",
      "all"
    ],
    "import/no-named-as-default": 0,
    "@typescript-eslint/brace-style": [
      "error",
      "1tbs"
    ],
    "@typescript-eslint/space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
